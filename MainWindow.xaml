<Window x:Class="Baseball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baseball"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Baseball" 
        Height="350" 
        Width="525" 
        WindowState="Maximized" 
        Icon="./Resources/baseball.ico"
        Background="WhiteSmoke">

    <Grid x:Name="layout" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File"/>
                <MenuItem Header="_Start">
                    <MenuItem Header="_New Game" Click="NewGameClick"/>
                    <MenuItem Header="_Load Game"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>


    </Grid>
</Window>
    
